pipeline{
  agent any
   libraries{
       lib('Terraform-Test')
   }
    parameters{
      choice(name: 'Action', choices:['apply', 'destroy'])
    }
    stages{
     stage('checkout'){
     steps{
          gitcheckout()
        }
      }

      stage('Init'){
         steps{
              sh 'terraform init'
              }
        }
       stage('Action'){
           when {
              expression { params.Module == ${Action}}
           }
            steps{
              sh 'terraform ${Action}'
              }
           }
   }

}
